<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.mapper.AccidentMapper">
    <select id="selectAll" resultType="com.example.entity.Accident">
        SELECT * FROM accident
    </select>

    <select id="selectByTimeRange" resultType="com.example.entity.Accident">
        SELECT * FROM accident
        WHERE happen_time BETWEEN #{start} AND #{end}
    </select>

    <select id="selectByCondition" parameterType="com.example.entity.Accident" resultType="com.example.entity.Accident">
        SELECT * FROM accident
        <where>
            <!-- 这里可以根据 Accident 实体的属性添加动态查询条件 -->
            <if test="accidentName != null and accidentName != ''">
                AND accident_name = #{accidentName}
            </if>
            <!-- 其他条件... -->
        </where>
    </select>

    <!-- 新增事故 -->
    <insert id="insert" parameterType="com.example.entity.Accident">
        INSERT INTO accident (
            happen_time, level, death_count, injured_count,
            response_time, related_area, create_time
        ) VALUES (
                     #{happenTime}, #{level}, #{deathCount}, #{injuredCount},
                     #{responseTime}, #{relatedArea}, #{createTime}
                 )
    </insert>

    <!-- 根据ID全量更新 -->
    <update id="updateById" parameterType="com.example.entity.Accident">
        UPDATE accident
        SET happen_time = #{happenTime},
            level = #{level},
            death_count = #{deathCount},
            injured_count = #{injuredCount},
            response_time = #{responseTime},
            related_area = #{relatedArea},
            create_time = #{createTime}
        WHERE id = #{id}
    </update>

    <!-- （可选）选择性更新（只更新非null字段） -->
    <update id="updateSelective" parameterType="com.example.entity.Accident">
        UPDATE accident
        <set>
            <if test="happenTime != null">happen_time = #{happenTime},</if>
            <if test="level != null">level = #{level},</if>
            <if test="deathCount != null">death_count = #{deathCount},</if>
            <if test="injuredCount != null">injured_count = #{injuredCount},</if>
            <if test="responseTime != null">response_time = #{responseTime},</if>
            <if test="relatedArea != null">related_area = #{relatedArea},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 根据ID删除 -->
    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM accident WHERE id = #{id}
    </delete>

    <!-- 根据ID查询 -->
    <select id="selectById" parameterType="java.lang.Long" resultType="com.example.entity.Accident">
        SELECT * FROM accident WHERE id = #{id}
    </select>
</mapper>
