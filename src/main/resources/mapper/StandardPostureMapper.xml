<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.StandardPostureMapper">

    <!-- 结果映射：实体与数据库表字段映射 -->
    <resultMap id="StandardPostureResultMap" type="com.example.entity.StandardPosture">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="description" property="description" jdbcType="VARCHAR"/>
        <result column="image_url" property="imageUrl" jdbcType="VARCHAR"/>
        <result column="standard_arm_angle" property="standardArmAngle" jdbcType="DOUBLE"/>
        <result column="standard_wrist_position" property="standardWristPosition" jdbcType="DOUBLE"/>
        <result column="standard_body_posture" property="standardBodyPosture" jdbcType="VARCHAR"/>
        <result column="standard_spray_distance" property="standardSprayDistance" jdbcType="DOUBLE"/>
        <result column="standard_spray_angle" property="standardSprayAngle" jdbcType="DOUBLE"/>
        <result column="standard_pressure" property="standardPressure" jdbcType="DOUBLE"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 查询所有标准姿态数据 -->
    <select id="selectAll" resultMap="StandardPostureResultMap">
        SELECT
            id, name, description, image_url,
            standard_arm_angle, standard_wrist_position, standard_body_posture,
            standard_spray_distance, standard_spray_angle, standard_pressure,
            create_time, update_time
        FROM t_standard_posture
        ORDER BY id ASC
    </select>

</mapper>