<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.mapper.AccidentMapper">
    <select id="selectAll" resultType="com.example.entity.Accident">
        SELECT * FROM accident
    </select>

    <select id="selectByTimeRange" resultType="com.example.entity.Accident">
        SELECT * FROM accident
        WHERE happen_time BETWEEN #{start} AND #{end}
    </select>

    <select id="selectByCondition" parameterType="com.example.entity.Accident" resultType="com.example.entity.Accident">
        SELECT * FROM accident
        <where>
            <!-- 这里可以根据 Accident 实体的属性添加动态查询条件 -->
            <if test="accidentName != null and accidentName != ''">
                AND accident_name = #{accidentName}
            </if>
            <!-- 其他条件... -->
        </where>
    </select>
</mapper>
