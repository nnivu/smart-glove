<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.PostureComparisonMapper">

    <!-- 结果映射：实体与数据库表字段映射 -->
    <resultMap id="PostureComparisonResultMap" type="com.example.entity.PostureComparison">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="item_name" property="itemName" jdbcType="VARCHAR"/>
        <result column="user_value" property="userValue" jdbcType="DOUBLE"/>
        <result column="standard_value" property="standardValue" jdbcType="DOUBLE"/>
        <result column="training_id" property="trainingId" jdbcType="BIGINT"/>
    </resultMap>

    <!-- 根据训练ID查询姿态对比数据 -->
    <select id="selectByTrainingId" resultMap="PostureComparisonResultMap">
        SELECT
            id,
            item_name,
            user_value,
            standard_value,
            training_id
        FROM t_posture_comparison
        WHERE training_id = #{trainingId}
        ORDER BY id ASC
    </select>

</mapper>